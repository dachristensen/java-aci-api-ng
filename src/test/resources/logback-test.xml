<configuration>

  <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss}, %p, %c{20}\(%L\): %m%n</pattern>
    </encoder>
  </appender>

  <logger additivity="false" name="com.autonomy">
    <level value="trace" />
    <appender-ref ref="ConsoleAppender" />
  </logger>

  <root>
    <level value="info" />
    <appender-ref ref="ConsoleAppender" />
  </root>

</configuration>
